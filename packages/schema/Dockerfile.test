# Test Dockerfile for Schema API
# Used in integration testing with miniflare/workerd

FROM oven/bun:1 AS builder

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Build (if needed)
RUN bun run build || true

# Runtime stage
FROM oven/bun:1

WORKDIR /app

# Install wrangler
RUN bun add -g wrangler

# Copy from builder
COPY --from=builder /app /app

# Expose port
EXPOSE 8788

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=10s --retries=5 \
  CMD curl -f http://localhost:8788/health || exit 1

# Start with wrangler in local mode
CMD ["wrangler", "dev", "--port", "8788", "--local"]
