{
	"name": "@ngfw/schema",
	"description": "NGFW.sh API schema and server using Hono + Chanfana + D1",
	"dependencies": {
		"@clerk/backend": "^2.29.2",
		"chanfana": "2.8.3",
		"hono": "4.11.4",
		"zod": "3.25.67"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "0.10.11",
		"@types/node": "24.10.1",
		"typescript": "5.9.3",
		"vitest": "3.2.4",
		"wrangler": "4.56.0"
	},
	"private": true,
	"scripts": {
		"cf-typegen": "wrangler types",
		"deploy": "wrangler deploy",
		"dev": "pnpm seedLocalDb && wrangler dev",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"schema": "npx chanfana",
		"seedLocalDb": "wrangler d1 migrations apply DB --local",
		"test": "wrangler deploy --dry-run && npx vitest run --config tests/vitest.config.mts"
	}
}
