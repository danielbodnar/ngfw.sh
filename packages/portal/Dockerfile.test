# Dockerfile for testing the portal in Docker environment
FROM oven/bun:1.2 AS base
WORKDIR /app

# Install dependencies
COPY package.json bun.lock ./
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Start dev server
CMD ["bun", "run", "dev", "--host", "0.0.0.0"]
