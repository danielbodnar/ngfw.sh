# Test Dockerfile for Portal (Astro)
# Used in integration testing

FROM oven/bun:1 AS builder

WORKDIR /app

# Copy package files
COPY package.json bun.lockb* ./

# Install dependencies
RUN bun install --frozen-lockfile

# Copy source code
COPY . .

# Build for development
RUN bun run build || true

# Runtime stage
FROM oven/bun:1

WORKDIR /app

# Copy from builder with correct ownership
COPY --chown=1000:1000 --from=builder /app /app

# Create non-root user
RUN groupadd -g 1000 ngfw && useradd -u 1000 -g ngfw -m ngfw
USER ngfw

# Expose port
EXPOSE 4321

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=15s --retries=5 \
  CMD curl -f http://localhost:4321/ || exit 1

# Start dev server
CMD ["bun", "run", "dev", "--host", "0.0.0.0", "--port", "4321"]
