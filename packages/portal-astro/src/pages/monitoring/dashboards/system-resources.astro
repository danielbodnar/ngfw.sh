---
import PortalLayout from '../../../layouts/PortalLayout.astro';

const { userId } = Astro.locals.auth();
if (!userId) {
  return Astro.redirect('/sign-in');
}
---

<PortalLayout title="System Resources - NGFW.sh">
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-[--color-text-primary] mb-1">
        System Resources
      </h2>
      <p class="text-[--color-text-secondary]">
        CPU, memory, and disk usage metrics
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">CPU Usage</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">32%</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Memory Usage</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">58%</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Disk Usage</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">42%</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Temperature</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">45Â°C</p>
      </div>
    </div>
  </div>
</PortalLayout>
