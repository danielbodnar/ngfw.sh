---
import PortalLayout from '../../../layouts/PortalLayout.astro';

if (!Astro.locals.user) {
  return Astro.redirect('/sign-in');
}
---

<PortalLayout title="VPN Metrics - NGFW.sh">
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-[--color-text-primary] mb-1">
        VPN Metrics
      </h2>
      <p class="text-[--color-text-secondary]">
        VPN server and client connection statistics
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Active Peers</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">5</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Data Transferred</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">2.4 GB</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Avg Latency</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">45 ms</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Throughput</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">15 Mbps</p>
      </div>
    </div>
  </div>
</PortalLayout>
