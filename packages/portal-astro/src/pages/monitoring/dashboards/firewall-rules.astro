---
import PortalLayout from '../../../layouts/PortalLayout.astro';

const { userId } = Astro.locals.auth();
if (!userId) {
  return Astro.redirect('/sign-in');
}
---

<PortalLayout title="Firewall Rules - NGFW.sh">
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-[--color-text-primary] mb-1">
        Firewall Rules
      </h2>
      <p class="text-[--color-text-secondary]">
        Rule hits and block statistics
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Total Rules</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">47</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Rules Hit Today</p>
        <p class="text-2xl font-semibold text-[--color-text-primary]">8,942</p>
      </div>
      <div class="bg-[--color-surface-secondary] p-6 rounded-lg">
        <p class="text-sm text-[--color-text-secondary] mb-2">Blocks Today</p>
        <p class="text-2xl font-semibold text-red-500">3,245</p>
      </div>
    </div>
  </div>
</PortalLayout>
