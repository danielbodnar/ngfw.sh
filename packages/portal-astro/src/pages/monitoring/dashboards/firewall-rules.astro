---
import DashboardViewerApp from "../../../components/monitoring/DashboardViewerApp.vue";
import PortalLayout from "../../../layouts/PortalLayout.astro";

const { userId } = Astro.locals.auth();
if (!userId) {
	return Astro.redirect("/sign-in");
}
---

<PortalLayout title="Firewall Rules - NGFW.sh">
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-[--color-text-primary] mb-1">
        Firewall Rules
      </h2>
      <p class="text-[--color-text-secondary]">
        Active firewall rules and blocked connections
      </p>
    </div>

    <DashboardViewerApp
      dashboard-id="firewall-rules"
      title="Firewall Rules"
      description="Active firewall rules and blocked connections"
      client:load
    />
  </div>
</PortalLayout>
