---
import PortalLayout from '../../../layouts/PortalLayout.astro';
import DashboardViewerApp from '../../../components/monitoring/DashboardViewerApp.vue';

const { userId } = Astro.locals.auth();
if (!userId) {
  return Astro.redirect('/sign-in');
}
---

<PortalLayout title="Network Overview - NGFW.sh">
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-[--color-text-primary] mb-1">
        Network Overview
      </h2>
      <p class="text-[--color-text-secondary]">
        Overall network status and performance
      </p>
    </div>

    <DashboardViewerApp
      dashboard-id="network-overview"
      title="Network Overview"
      description="Overall network status and performance"
      client:load
    />
  </div>
</PortalLayout>
