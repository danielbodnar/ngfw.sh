---
import PortalLayout from '../../../layouts/PortalLayout.astro';
import DashboardViewerApp from '../../../components/monitoring/DashboardViewerApp.vue';

const { userId } = Astro.locals.auth();
if (!userId) {
  return Astro.redirect('/sign-in');
}
---

<PortalLayout title="Traffic Analysis - NGFW.sh">
  <div class="space-y-6">
    <div>
      <h2 class="text-2xl font-semibold text-[--color-text-primary] mb-1">
        Traffic Analysis
      </h2>
      <p class="text-[--color-text-secondary]">
        Network traffic patterns and statistics
      </p>
    </div>

    <DashboardViewerApp
      dashboard-id="traffic-analysis"
      title="Traffic Analysis"
      description="Network traffic patterns and statistics"
      client:load
    />
  </div>
</PortalLayout>
