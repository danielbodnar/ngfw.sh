{
	"name": "@ngfw/portal-astro",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"build:check": "astro check && astro build",
		"preview": "astro preview",
		"deploy": "astro build && wrangler deploy",
		"astro": "astro",
		"generate:api": "openapi-zod-client http://localhost:8788/openapi.json -o ./src/lib/api/generated/client.ts --export-schemas --with-docs --with-alias --api-client-name ngfwApi",
		"generate:api:remote": "openapi-zod-client https://api.ngfw.sh/openapi.json -o ./src/lib/api/generated/client.ts --export-schemas --with-docs --with-alias --api-client-name ngfwApi",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"test:integration": "vitest run --config vitest.config.ts tests/integration",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:report": "playwright show-report"
	},
	"dependencies": {
		"@astrojs/cloudflare": "^12.6.12",
		"@astrojs/vue": "^5.1.4",
		"@clerk/astro": "^2.17.1",
		"@clerk/clerk-js": "^5.122.1",
		"astro": "^5.17.1",
		"vue": "^3.5.28"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.6",
		"@playwright/test": "^1.58.2",
		"@tailwindcss/vite": "^4.1.18",
		"@vitejs/plugin-vue": "^6.0.4",
		"@vitest/ui": "^4.0.18",
		"@vue/test-utils": "^2.4.6",
		"happy-dom": "^20.5.3",
		"msw": "^2.12.9",
		"openapi-zod-client": "^1.18.3",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18",
		"wrangler": "^4.63.0"
	}
}
